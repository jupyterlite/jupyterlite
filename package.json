{
  "name": "@jupyterlite/root",
  "version": "0.8.0a0",
  "private": true,
  "homepage": "https://github.com/jupyterlite/jupyterlite",
  "bugs": {
    "url": "https://github.com/jupyterlite/jupyterlite/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jupyterlite/jupyterlite"
  },
  "license": "BSD-3-Clause",
  "author": "JupyterLite Contributors",
  "workspaces": {
    "packages": [
      "app",
      "app/consoles",
      "app/edit",
      "app/lab",
      "app/notebooks",
      "app/repl",
      "app/tree",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "jlpm build:lib && jlpm build:app",
    "build:app": "lerna run build --stream --parallel --scope @jupyterlite/app",
    "build:lib": "lerna run build --scope @jupyterlite/metapackage",
    "build:prod": "jlpm build:lib && lerna run build:prod",
    "build:py": "cd py/jupyterlite-core && hatch build ../../dist && cd ../jupyterlite && hatch build ../../dist",
    "clean": "lerna run clean",
    "deduplicate": "jlpm dlx yarn-berry-deduplicate -s fewerHighest && jlpm install",
    "dev:build": "python scripts/dev-build.py",
    "dev:serve": "python -m http.server -b 127.0.0.1 8000 -d _site",
    "dev:watch": "run-p watch dev:watch:content",
    "dev:watch:content": "python scripts/dev-build.py --watch",
    "docs": "typedoc && python scripts/post-process-typedoc.py",
    "docs:build": "sphinx-build -b html docs docs/_build/html",
    "docs:serve": "python -m http.server -b 127.0.0.1 8000 -d docs/_build/html",
    "docs:watch": "sphinx-autobuild docs docs/_build/html",
    "eslint:check": "eslint . --ext .ts,.tsx --cache",
    "eslint:fix": "eslint . --ext .ts,.tsx --fix --cache",
    "install": "lerna bootstrap",
    "install:py": "python -m pip install --group dev --group test -e './py/jupyterlite-core[all,test]' -e ./py/jupyterlite",
    "integrity": "python scripts/check-integrity.py",
    "integrity:check": "python scripts/check-integrity.py --check",
    "lint": "jlpm prettier:fix && jlpm eslint:fix && jlpm lint:py",
    "lint:check": "jlpm prettier:check && jlpm eslint:check && jlpm lint:py:check",
    "lint:py": "ruff format . && ruff check . --fix",
    "lint:py:check": "ruff format . --check && ruff check .",
    "pack:app": "npm pack app/ --pack-destination py/jupyterlite-core/jupyterlite_core/",
    "prettier:check": "prettier --list-different \"**/*{.ts,.tsx,.js,.jsx,.css,.json,.md,.yml}\"",
    "prettier:fix": "prettier --list-different --write \"**/*{.ts,.tsx,.js,.jsx,.css,.json,.md,.yml}\"",
    "test:py": "python -m pytest --pyargs jupyterlite_core -v",
    "test:py:cov": "python -m pytest --pyargs jupyterlite_core -v --cov=jupyterlite_core --cov-report=html:build/htmlcov --cov-report=term-missing --cov-fail-under=82",
    "update:dependency": "node ./node_modules/@jupyterlab/buildutils/lib/update-dependency.js --lerna",
    "watch": "run-p watch:lib watch:app",
    "watch:app": "lerna exec --stream --parallel --scope @jupyterlite/app jlpm watch",
    "watch:lib": "lerna exec --stream --scope @jupyterlite/metapackage jlpm watch"
  },
  "prettier": {
    "printWidth": 88,
    "proseWrap": "always",
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.jupyterlab-workspace",
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "devDependencies": {
    "@jupyterlab/buildutils": "~4.6.0-alpha.1",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.1",
    "lerna": "^6.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "shell-quote": "^1.8.1",
    "svgo": "^3.0.1",
    "typedoc": "~0.28.2",
    "typedoc-plugin-markdown": "~4.6.2",
    "typescript": "~5.5.4"
  },
  "packageManager": "yarn@3.5.0"
}
